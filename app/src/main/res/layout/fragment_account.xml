<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B5BAD6"
    android:orientation="vertical"
    tools:context=".FragmentAccount">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Detail Information"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#99FF23"
        android:background="#434343">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#414457"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_gravity="center">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:src="@drawable/account_profileimg"
                tools:ignore="MissingClass" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :  Kishan Bhadani"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course : Web Development"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail : kisnpatel0@gmail.com"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile : +91 8852451221"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age : 22 Year"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="#E9EDFF"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:src="@drawable/account_sec_item1_accmore">
        </ImageView>
        <TextView
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Account more deatis">
        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/account_sec_rightarrow">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E9EDFF"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:src="@drawable/account_sec_item4_morecouse">
        </ImageView>
        <TextView
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Other Courses">
        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/account_sec_rightarrow">
        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E9EDFF"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:src="@drawable/account_sec_item2_lang">
        </ImageView>
        <TextView
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Languge">
        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/account_sec_rightarrow">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E9EDFF"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:src="@drawable/account_sec_item3_invite">
        </ImageView>
        <TextView
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Invite a friend">
        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/account_sec_rightarrow">
        </ImageView>
    </LinearLayout>





</LinearLayout>